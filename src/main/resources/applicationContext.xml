<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    
    <bean name="address" class="com.springcore.model.Address">
    <constructor-arg name="city"  value="ghaziabad" />

<constructor-arg name="state"  value="up" />
    
    </bean>
		

<bean name ="emp" class="com.springcore.model.Employee" autowire="constructor">
<constructor-arg name="id"  value="111" />

<constructor-arg name="name"  value="Guest" />
<constructor-arg name="gender"  value="Male" />


</bean>



